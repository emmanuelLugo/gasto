<?xml version= "1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace= "com.py.api.mapper.sistema.EmpresaMapper">

	<resultMap id="resultSimples" type="Empresa">
		<id property="id" column="ID_EMPRESA"/>
		<result property="descricao" column="DS_EMPRESA"/>
		<result property="urlFoto" column="URL_FOTO"/>
	</resultMap>

	<resultMap id="result" type="Empresa" extends="resultSimples">
	</resultMap>

	<sql id="sqlDefault">
		SELECT * FROM SYS_EMPRESA
	</sql>

	<select id="findByCondition" resultMap="resultSimples"
		parameterType="hashMap">
		<include refid="sqlDefault" />
		WHERE ${condition}
	</select>

	<select id="findEmpresa" resultMap="resultSimples">
		<include refid="sqlDefault" />
		 LIMIT 1
	</select>

</mapper>